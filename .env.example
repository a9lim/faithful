# ── Discord ──────────────────────────────────────────────
DISCORD_TOKEN=your-bot-token-here
ADMIN_USER_ID=your-discord-user-id

# ── Active backend: markov | ollama | openai ────────────
ACTIVE_BACKEND=openai

# ── Ollama (local LLM) ──────────────────────────────────
OLLAMA_MODEL=llama3
OLLAMA_HOST=http://localhost:11434

# ── OpenAI-compatible API (cloud LLM) ───────────────────
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# ── Behaviour ────────────────────────────────────────────
# Comma-separated channel IDs where the bot may send unprompted messages
SPONTANEOUS_CHANNELS=

# Probability (0.0–1.0) of replying to a random message in watched channels
REPLY_PROBABILITY=0.02

# Bot persona name (used in system prompts for LLM backends)
PERSONA_NAME=faithy
