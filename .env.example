# ── Discord ──────────────────────────────────────────────
DISCORD_TOKEN=your-bot-token-here
ADMIN_USER_ID=your-discord-user-id

# ── Active backend: markov | ollama | openai ────────────
ACTIVE_BACKEND=markov

# ── Ollama (local LLM) ──────────────────────────────────
OLLAMA_MODEL=llama3
OLLAMA_HOST=http://localhost:11434

# ── OpenAI-compatible API (cloud LLM) ───────────────────
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# ── Behaviour ────────────────────────────────────────────
# Comma-separated channel IDs where the bot may send unprompted messages
SPONTANEOUS_CHANNELS=

# Probability (0.0–1.0) of replying to a random message in watched channels
REPLY_PROBABILITY=0.02

# Bot persona name (used in system prompts for LLM backends)
PERSONA_NAME=faithy

# ── LLM Configuration ────────────────────────────────────
# How many example messages to sample for the system prompt
LLM_SAMPLE_SIZE=300

# Controls randomness (0.0–2.0). 1.0 is default.
LLM_TEMPERATURE=1.0

# Maximum tokens per response. 512 is default.
LLM_MAX_TOKENS=512

# Maximum number of recent messages to include as context
MAX_CONTEXT_MESSAGES=20

# Optional: Custom system prompt template
# Available placeholders: {name}, {examples}
# SYSTEM_PROMPT_TEMPLATE=

# ── Permissions ──────────────────────────────────────────
# If True, only the configured admin can upload/modify messages.
ADMIN_ONLY_UPLOAD=True

# ── Timers ───────────────────────────────────────────────
# Wait time (seconds) to collect multiple user messages before responding
DEBOUNCE_DELAY=3.0

# Time (seconds) before a conversation is considered stale
# Bot will ignore replies/follow-ups to messages older than this
CONVERSATION_EXPIRY=300.0
